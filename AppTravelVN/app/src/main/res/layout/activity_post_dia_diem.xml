<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDiaDiemActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageViewPostDiaChi"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:background="#6C6060"
                android:src="@drawable/ic_baseline_cloud_download_24" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-130dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTextTenDiaChi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    android:hint="Nhập tên địa điểm"
                    android:textColor="@color/white"
                    android:textColorHint="#000000"

                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:text="Tổng quan"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTextThongTin"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:alpha="0.5"

                    android:hint="Nhập thông tin địa điểm"

                    android:inputType="textMultiLine"
                    android:textColor="@color/white"
                    android:textColorHint="#000000"

                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Địa chỉ"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputTextDiaChiDiaDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"

                    android:hint="Nhập địa chỉ"

                    android:inputType="textMultiLine"
                    android:textColor="@color/white"
                    android:textColorHint="#000000"

                    android:textStyle="bold" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageViewPostDiaDiem1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="#6C6060"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_cloud_download_24" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageViewPostDiaDiem2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6C6060"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_cloud_download_24" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageViewPostDiaDiem3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#6C6060"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_cloud_download_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDangDiaDiem"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Đăng"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:cornerRadius="8dp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>