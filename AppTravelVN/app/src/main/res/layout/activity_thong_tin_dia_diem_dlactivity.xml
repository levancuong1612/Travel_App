<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageChiTietDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:layout_span="2"
                android:scaleType="fitXY"
                android:src="@drawable/hanoi1" />

            <TextView
                android:id="@+id/textViewTenChiTietDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:text="Địa Điểm"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:text="Tổng quan"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/textViewTongQuanDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="thông tin mô tả của địa điêm du lịch
thông tin mô tả của địa điêm du lịch
thông tin mô tả của địa điêm du lịch
thông tin mô tả của địa điêm du lịch
thông tin mô tả của địa điêm du lịch
thông tin mô tả của địa điêm du lịch
thông tin mô tả của địa điêm du lịch
"
                android:textColor="#514B4B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Tổng quan"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/textViewViTriDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text=""
                android:textColor="#514B4B" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Hình ảnh"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/imageHinhAnhChiTietDiaDiem1"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:scaleType="fitXY"
                android:src="@drawable/diadiem2" />

            <ImageView
                android:id="@+id/imageHinhAnhChiTietDiaDiem2"
                android:layout_width="match_parent"
                android:layout_height="230dp"

                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:scaleType="fitXY"
                android:src="@drawable/diadiem2" />

            <ImageView
                android:id="@+id/imageHinhAnhChiTietDiaDiem3"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_span="2"
                android:scaleType="fitXY"
                android:src="@drawable/diadiem2" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonFloatAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_add"

        android:backgroundTint="#220655"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:tint="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>